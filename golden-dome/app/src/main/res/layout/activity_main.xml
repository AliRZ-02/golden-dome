<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="Golden Dome"
        android:textColor="#2d3436"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/openSalahClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="170dp"
        android:layout_weight="1"
        android:background="@drawable/transparent"
        android:scaleX="5"
        android:scaleY="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clock_asset" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="131dp"
        android:layout_height="47dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="55dp"
        android:contextClickable="true"
        android:fontFamily="@font/roboto"
        android:text="Salah Clock"
        android:textAlignment="center"
        android:textColor="#2d3436"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openSalahClock" />

    <ImageButton
        android:id="@+id/comingSoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="88dp"
        android:layout_weight="1"
        android:background="@drawable/transparent"
        android:scaleX="5"
        android:scaleY="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/code_asset" />

    <TextView
        android:id="@+id/comingSoonText"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="21dp"
        android:fontFamily="@font/roboto"
        android:text="Coming Soon"
        android:textAlignment="center"
        android:textColor="#2d3436"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comingSoon" />

</androidx.constraintlayout.widget.ConstraintLayout>